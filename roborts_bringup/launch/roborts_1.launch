<launch>
  <master auto="start"/>
    <include file="$(find roborts_bringup)/launch/roborts_icra.launch">
      <arg name="robot_name" value="robot_1" />
      <arg name="initial_pose_x" value="0.5"/>
      <arg name="initial_pose_y" value="0.5"/>
    </include>

    <!-- Run the lidar node -->
    <node name="rplidar_node" pkg="rplidar_ros" type="rplidarNode">
      <param name="serial_port" type="string" value="/dev/rplidar"/>
      <param name="serial_baudrate" type="int" value="115200"/>
      <param name="frame_id" type="string" value="/$(arg robot_name)/base_laser_link"/>
      <param name="inverted" type="bool" value="false"/>
      <param name="angle_compensate" type="bool" value="true"/>
    </node>

    <!-- Run the camera node -->
    <node name="roborts_camera" pkg="roborts_camera" type="roborts_camera_node"/>

    <!-- Run the detection node-->
    <node name="roborts_detect_node" pkg="roborts_detection" type="armor_detection_node"/>
    <!-- Run the detection clien-->
    <node name="roborts_detect_client" pkg="roborts_detection" type="armor_detection_client"/>

  </group>

  <include file="$(find roborts_bringup)/launch/roborts_multi_base.launch">
    <arg name="robot_name" value="$(arg robot_name)" />
    <arg name="initial_pose_x" value="0.5"/>
    <arg name="initial_pose_y" value="0.5"/>
  </include>

  <node ns="$(arg robot_name)" name="decision_tree" pkg="roborts_decision" type="hop_decision_node" />

</launch>

